@{
    var user = Html.GetUserAccessToken();
}
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="@Url.Content("~/bootstrap/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/css/penedating.css")" rel="stylesheet" type="text/css" />

        <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.8.2.min.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/bootstrap/js/bootstrap.min.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Scripts/penedating.js")"></script>
    </head>
    <body>
        <div class="container">
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="navbar-inner">
                    <div class="container">
                        <a class="brand" href="@Url.Action("index", "home")">Penedating</a>
                        <ul class="nav">
                            
                            <li><a href="@Url.Action("Index", "About")">About</a></li>
                        </ul>

                        <ul class="nav pull-right" class="dropdown">
                            @if (user != null)
                            {
                                <li>
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">@user.Email <i class="icon-chevron-down icon-white"></i></a>
                                    <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                        <li><a href="@Url.Action("Index", "Me")"><i class="icon-pencil"></i> My Account</a></li>
                                        <li class="divider"></li>
                                        @if(user.IsAdmin)
                                        {
                                            <li><a href="@Url.Action("Index", "Admin")"><i class="icon-wrench"></i> Administrate</a></li>
                                            <li class="divider"></li>
                                        }
                                        <li><a href="@Url.Action("Logout", "Me")"><i class="icon-off"></i> Logout</a></li>
                                    </ul>
                                </li>
                            }
                            else
                            {   
                                <li><a href="@Url.Action("Index", "Login")">Login</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            @RenderBody()
        </div>
    </body>
</html>